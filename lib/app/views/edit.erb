<div class="container">
  <div class="row">
    <div class="col-xs-12">

          <h1>edit your idea</h1>
          <form action='/<%= idea.id %>' method='POST'>
            <p>
              <% if idea.id %>
              <% else %>
                Your Idea:
              <% end %>
            </p>
            <% if idea.id %>
              <input type="hidden" name="_method" value="PUT" />
            <% end %>
            <input type='text' name='idea[title]' value="<%= idea.title %>" class='form-control'/><br/>
            <textarea name='idea[description]' class='form-control'><%= idea.description %></textarea><br/>
            <input type='text' name='idea[tags]' value="<%= idea.tags %>" class='form-control'/><br/>
            <input type='submit' class="btn btn-primary pull-right"/>
          </form>
    </div>
  </div>
</div>
