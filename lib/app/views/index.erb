<html>
  <body>
    <h1>idea box!</h1>
    <form action='/' method='POST'>
      <input type='text' name='idea[title]' placeholder='title'/><br/>
      <textarea name='idea[description]' placeholder='put idea here'></textarea><br/>
      <input type='text' name='idea[tag]' placeholder='tags, tags, tags'/><br/>
      <input type='submit'/>
    </form>

    <h3>existing ideas</h3>
    <ol>
     <% ideas.each do |idea| %>
        <li>
          <form action='/<%= idea.id %>/like' method='POST' style="display: inline">
            <input type='submit' value="+ some love"/>
                      (<%= idea.rank %>) loves </br>
          </form>
          idea title:  <%= idea.title %><br/>
          <%= idea.description %><br/>
          tags: <a href="/<%= idea.tag %>"><%= idea.tag%></a><br/>
          <a href="/<%= idea.id %>/edit">Edit</a><br/>
          <form action='/<%= idea.id %>' method='POST'>
            <input type="hidden" name="_method" value="DELETE">
            <input type='submit' value="delete"/>
          </form>
        </li>
      <% end %>
    </l>
  </body>
</html>
